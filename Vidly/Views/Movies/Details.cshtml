@model Vidly.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Genre: @Model.Genre.GenreName</li>
    <li>Released Date: @Model.ReleaseDate.ToLongDateString()</li>
    <li>Date added: @Model.AddedDate.ToShortDateString()</li>
    <li>Number in stock: @Model.NumberInStock</li>
</ul>


